#campus_main_button_pic1{height:24px;width:24px;background:url(images/Icon1.png) no-repeat;display:inline-block;vertical-align:middle;}
#campus_main_button_pic2{height:25px;width:36px;background:url(images/Icon2.png) no-repeat;display:inline-block;vertical-align:middle;}
#campus_main_button_pic3{height:26px;width:28px;background:url(images/Icon3.png) no-repeat;display:inline-block;vertical-align:middle;}
