#campus_sub_menu{
	width:341px;
	min-height:100px;
	position:absolute;
	float:left;
	z-index:1;
}
#csm_top{
	background:url(images/csm_top.png) no-repeat;
	position:relative;
	width:341px;
	height:89px;
	display:inline-block;
}
#csm_content{
	background:url(images/csm_content.png) repeat-y;
	position:relative;
	width:341px;
	min-height:40px;
	padding-left:50px;
	padding-right:50px;
	overflow:hidden;
	display:inline-block;
}
#csm_bottom{
	background:url(images/csm_btm.png) no-repeat;
	position:relative;
	width:341px;
	height:8px;
	display:inline-block;
}

#cp_introduce{
	position:absolute;
	width:897px;
	left: 50%;
	margin-left: -448.5px; /* 897 除以 -2 */
	z-index:3;
}
#cp_intro_top{
	background:url(images/intro_top.png) no-repeat;
	position:relative;
	width:897px;
	height:96px;
	display:inline-block;
}
#cp_editsele{
	margin-top:30px;
	margin-left:60px;
	position:absolute;
	background-color:transparent;
}

#cp_intro_content{
	background:url(images/intro_content.png) repeat-y;
	position:relative;
	white-space:normal;
	padding-left:50px;
	min-height:40px;
}
#cp_intro_bottom{
	background:url(images/intro_btm.png) no-repeat;
	position:relative;
	width:897px;
	height:159px;
	display:inline-block;
}

.floatleft{
	float:left;
	padding-right:20px;
}

.clearboth{
	clear:both;
}

.CPHiding{
	display:none;
}

.CPdisplay{
	display:inline;
}