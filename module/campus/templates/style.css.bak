/* CSS Document */

#campus_all{
	min-height:100%;
	width:100%
}

#campus_main_menu{
	width:100%;
	background:#FFF;
	display:inline-block;
	float:left;
}
.main_button_text{
	vertical-align:middle;
	display:inline-block;
}
.campus_main_menu_button{
	height:100%;
	width:15.4%;
	color:#333333;
	font: "微軟正黑體";
	display:inline-block;
	float:left;
	text-align:center;
	}

#campus_center_block{
	background:url(images/background.jpg);
	height:797px;
	width:946px;
	display:inline-block;
	overflow:hidden;
	position:relative;
	z-index:1;
}

