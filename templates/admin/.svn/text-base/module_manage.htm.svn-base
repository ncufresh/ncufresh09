<div>
  <table border="1" cellpadding="3" cellspacing="0" align="center" style="border-collapse: collapsed" width="400">
    <thead>
      <tr>
        <th align="center">模組名稱</th>
        <th colspan="2" align="center">管理</th>
      </tr>
    </thead>
    <tbody>
<{foreach from=$module_list item="module"}>
      <tr>
        <td><{$module.name}></td>
        <td align="center" width="65"><a href="<{$currconfig->phpself}>?do_module=install&value=<{if ($module.installed == 1)}>0<{else}>1<{/if}>&name=<{$module.name}>" title=""><{if ($module.installed == 1)}>解除<{/if}>安裝</a></td>
        <td align="center" width="35"><a href="<{$currconfig->phpself}>?do_module=active&value=<{if ($module.active == 1)}>0<{else}>1<{/if}>&name=<{$module.name}>" title=""><{if ($module.active != 1)}>啟<{else}>停<{/if}>用</a></td>
      </tr>
<{/foreach}>
    </tbody>
  </table>
</div>
