<script type="text/javascript">
	function show_msg_status(req)
	{
		var msg_num = req.responseText;

		var status = (msg_num > 0) ? '<a href="<{$block.dirname}>/msgbox.php" title="訊息信箱">您有 ' + msg_num + ' 封新訊息</a>' : '您沒有新訊息';

		$('msg_status').innerHTML = status;
	}

	function get_msg_status()
	{
		var parms = "unread=1";

		var req = new Ajax.Request("<{$block.dirname}>/msgbox_do.php", {method: "get", parameters: parms, onComplete: show_msg_status});

		setTimeout(get_msg_status, 60 * 1000);
	}

	get_msg_status();
</script>

